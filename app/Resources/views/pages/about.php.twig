{% extends 'base.html.twig' %}
{% block body %}

    <div class="about-page container-fluid pt-5">

        <div class="row">

            <div class="col-12 text-center mt-15">
                <h2>{{ pageAbout.pageTitle }}</h2>
                <p>{{ pageAbout.pageShortText }}</p>
            </div>

            <div class="container-fluid pl-md-5 pr-md-5 ml-md-5 mr-md-5 pl-2 pr-2 mr-2 ml-2">

                <div class="row pt-5 pb-5">
                    {% for about in about %}
                        {% if loop.index == 1  %}
                            <div class="col-lg-6 offset-lg-0 col-md-8 offset-md-2">
                                <img src="{{ asset (about.img) }}" class="w-100">
                            </div>

                            <div class="col-lg-6 offset-lg-0 col-md-8 offset-md-2">
                                <h3 class="pt-3 pb-2">{{ about.pagetitle }}</h3>
                                <p class="pt-2 pb-0 p-2">{{ about.maxtext }}</p>

                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>

        </div>

    </div>

    <section class="footer-section section">
        {{ render(controller('AppBundle:Default:footer')) }}
    </section>


{% endblock %}
