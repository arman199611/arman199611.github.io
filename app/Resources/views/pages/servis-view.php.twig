{% extends 'base.html.twig' %}
{% block body %}
    <section class="servis-view-section mt-15 pb-5 section">
        <div class="servis container-fluid pt-3">
            <div class="row">
                <div class="col-12 mt-3 text-center">
                    <h2>{{ pageService.pageTitle }}</h2>
                    <p>{{ pageService.pageShortText }}</p>
                </div>
                <div class="container-fluid bg-light pt-5 pb-5 ">
                    <div class="row">
                        <div class="col-12">
                            <div class="col-lg-5 float-left mr-3 mb-3">
                                <div id="carouselExampleIndicators1" class="carousel slide"
                                     data-ride="carousel1">
                                    <ol class="carousel-indicators">
                                        <li data-target="#carouselExampleIndicators1" data-slide-to="0"
                                            class="car-po-nk active">
                                            <img class="d-block w-100" src="{{ asset(service.img) }}">
                                        </li>
                                        <li data-target="#carouselExampleIndicators1" data-slide-to="1"
                                            class="car-po-nk">
                                            <img class="d-block w-100" src="{{ asset(service.img2) }}">
                                        </li>
                                        <li data-target="#carouselExampleIndicators1" data-slide-to="2"
                                            class="car-po-nk">
                                            <img class="d-block w-100" src="{{ asset(service.img3) }}">
                                        </li>
                                    </ol>
                                    <div class="carousel-inner car-nk">
                                        <div class="carousel-item active">
                                            <img class="d-block w-100" src="{{ asset(service.img) }}">
                                        </div>
                                        <div class="carousel-item">
                                            <img class="d-block w-100" src="{{ asset(service.img2) }}">
                                        </div>
                                        <div class="carousel-item">
                                            <img class="d-block w-100" src="{{ asset(service.img3) }}">
                                        </div>
                                    </div>
                                    <a class="carousel-control-prev" href="#carouselExampleIndicators1"
                                       role="button"
                                       data-slide="prev">
                                        <i class="fa fa-chevron-left" aria-hidden="true"></i>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                    <a class="carousel-control-next" href="#carouselExampleIndicators1"
                                       role="button"
                                       data-slide="next">
                                        <i class="fa fa-chevron-right" aria-hidden="true"></i>
                                        <span class="sr-only">Next</span>
                                    </a>
                                </div>
                            </div>
                            <h4 class="pt-2 pb-2">{{ service.title }}</h4>
                            <p class="pt-3">
                                {{ service.text }}
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-12 mt-5 text-center">
                    <h2>{{ 'Other Services' | trans }}</h2>
                </div>
                <div class="owl-carousel owl-theme owl-all-services">
                    {% for ser in service1 %}
                        {% if ser != service %}
                            <div class="item mt-5 mb-5 ml-5 mr-3">

                                <div class="cc p-3 bg-light">
                                    <img src="{{ asset (ser.img) }}" class="w-100">
                                    <a class="pages" href=" {{ path ( 'service-view',{'id':ser.id} ) }} ">
                                        <h5 class="pt-2">{{ ser.title }}</h5>
                                        <p>{{ ser.text|length > 35 ? ser.text|slice(0, 35) ~ '...' : ser.text }}</p>
                                    </a>
                                </div>
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>
{% endblock %}