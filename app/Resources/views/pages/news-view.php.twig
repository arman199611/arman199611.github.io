{% extends 'base.html.twig' %}
{% block body %}
    <section class="servis-view-section mt-5 pb-5 section">
        <div class="servis container-fluid pt-5">
            <div class="row">
                <div class="col-12 text-center pt-5">
                    <h2>{{ pageNews.pageTitle }}</h2>
                    <p>{{ pageNews.pageShortText }}</p>
                </div>
                <div class="container-fluid bg-light pt-5 pb-5 ">
                    <div class="row">
                        <div class="col-12">
                            <div class="col-lg-5 float-left mr-3 mb-2">
                                <div id="carouselExampleIndicators1" class="carousel slide"
                                     data-ride="carousel1">
                                    <ol class="carousel-indicators">
                                        <li data-target="#carouselExampleIndicators1" data-slide-to="0"
                                            class="car-po-nk active">
                                            <img class="d-block w-100" src={{ news.img }}>
                                        </li>
                                        <li data-target="#carouselExampleIndicators1" data-slide-to="1"
                                            class="car-po-nk">
                                            <img class="d-block w-100" src="{{ asset(news.img2) }}">
                                        </li>
                                        <li data-target="#carouselExampleIndicators1" data-slide-to="2"
                                            class="car-po-nk">
                                            <img class="d-block w-100" src="{{ asset(news.img3) }}">
                                        </li>
                                    </ol>
                                    <div class="carousel-inner car-nk">
                                        <div class="carousel-item active">
                                            <img class="d-block w-100" src="{{ asset(news.img) }}">
                                        </div>
                                        <div class="carousel-item">
                                            <img class="d-block w-100" src="{{ asset(news.img2) }}">
                                        </div>
                                        <div class="carousel-item">
                                            <img class="d-block w-100" src="{{ asset(news.img3) }}">
                                        </div>
                                    </div>
                                    <a class="carousel-control-prev" href="#carouselExampleIndicators1" role="button"
                                       data-slide="prev">
                                        <i class="fa fa-chevron-left" aria-hidden="true"></i>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                    <a class="carousel-control-next" href="#carouselExampleIndicators1"
                                       role="button"
                                       data-slide="next">
                                        <i class="fa fa-chevron-right" aria-hidden="true"></i>
                                        <span class="sr-only">Next</span>
                                    </a>

                                </div>

                            </div>
                            <h4 class="pt-2 pb-2">{{ news.title }}</h4>
                            <p class="pt-3">
                                {{ news.text }}
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-12 mt-5 text-center">
                    <h2>{{ 'Other News' | trans }}</h2>
                </div>
                <div class="owl-carousel owl-theme owl-all-services">
                    {% for news1 in news1 %}
                        {% if news1 != news %}
                            <div class="item mt-5 mb-5 ml-5 mr-3">
                                <div class="cc p-3 bg-light">
                                    <img src="{{ asset (news1.img) }}" class="w-100">
                                    <a class="pages" href="{{ path ( 'news-view',{'id':news1.id} ) }}">
                                        <h5 class="pt-2">{{ news1.title }}</h5>
                                        <p> {{ news1.text|length > 35 ? news1.text|slice(0, 35) ~ '...' : news1.text }} </p>
                                    </a>
                                </div>
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>
{% endblock %}