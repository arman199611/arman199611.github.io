{% spaceless %}
    <!DOCTYPE html>
    <html lang="ru">
    <head>
        {% block meta %}{% endblock %}
        <meta charset="UTF-8"/>

        <title>{% block title %} Сауна *КИТ* {% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
            <link rel="stylesheet" href="{{ asset('css/font-awesome.min.css') }}">
            <link rel="stylesheet" href="{{ asset('css/owl.carousel.min.css') }}">
            <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        {% endblock %}
    </head>
    <body>
    {% set pathName = app.request.get('_route') %}
    {% if page404 is not defined %}
        {{ render(controller('AppBundle:Default:menwer')) }}
        <nav class="navbar navbar-expand-lg nav-fix fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" href="{{ path('homepage') }}">
                    <img src="{{ asset('img/logo.png') }}" alt="logo">
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse"
                        data-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fa fa-bars" aria-hidden="true"></i>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link {{ pathName == 'homepage' ? 'active' }}"
                               href="{{ path('homepage') }}">{{ nav[0].text }}</a></li>
                        <li class="nav-item">
                            <a class="nav-link {{ pathName == 'service' or pathName == 'service-view' ? 'active' }}"
                               href="{{ path('service') }}">{{ nav[1].text }}</a></li>
                        <li class="nav-item">
                            <a class="nav-link {{ pathName == 'about' ? 'active' }}"
                               href="{{ path('about') }}">{{ nav[2].text }}</a></li>
                        <li class="nav-item">
                            <a class="nav-link {{ pathName == 'contact' ? 'active' }}"
                               href="{{ path('contact') }}">{{ nav[3].text }}</a></li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                               data-toggle="dropdown"
                               aria-haspopup="true" aria-expanded="false">
                                {{ "Lan" | trans }}
                            </a>
                            {% set route_params = app.request.get('_route_params') %}
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
{#                                <a class="dropdown-item" href="{{ path(pathName, route_params|merge({ _locale: 'en' })) }}">EN</a>#}
                                <a class="dropdown-item" href="{{ path(pathName, route_params|merge({ _locale: 'ru' })) }}">РУ</a>
                                <a class="dropdown-item" href="{{ path(pathName, route_params|merge({ _locale: 'am' })) }}">Հայ</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    {% endif %}
    {% block body %}{% endblock %}
    {% block javascripts %}
        <script src="{{ asset('js/jquery.js') }}"></script>
        <script src="{{ asset('js/bootstrap.min.js') }}"></script>
        <script src="{{ asset('js/owl.carousel.min.js') }}"></script>
        <script src="{{ asset('js/custm.js') }}"></script>
    {% endblock %}
    </body>
    </html>
{% endspaceless %}
